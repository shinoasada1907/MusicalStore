<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý khách hàng";
}

<h1 class="text-center text-primary my-4">Quản lý khách hàng</h1>
<div class="container mt-5 shadow p-4 rounded bg-white">
    <div class="table-responsive">
        <table id="customerTable" class="table table-hover table-bordered align-middle">
            <thead class="table-success text-center">
                <tr>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel item in Model)
                {
                    <tr>
                        <td>
                            <a href="/#" class="text-dark text-decoration-none fw-bold">@item.UName</a>
                        </td>
                        <td>@item.Sex</td>
                        <td>@item.Birthday.ToShortDateString()</td>
                        <td>@item.SDT</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#customerTable').DataTable({
            language: {
                "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                "zeroRecords": "Không tìm thấy kết quả",
                "info": "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
                "infoEmpty": "Không có dữ liệu",
                "infoFiltered": "(lọc từ _MAX_ tổng số dòng)",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Sau",
                    "previous": "Trước"
                }
            },
            pageLength: 10, // Số dòng mặc định mỗi trang
            ordering: true, // Kích hoạt sắp xếp
            searching: true, // Kích hoạt tìm kiếm
            paging: true // Kích hoạt phân trang
        });
    });
</script>
