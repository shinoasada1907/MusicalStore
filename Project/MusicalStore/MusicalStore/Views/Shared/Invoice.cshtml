@model MusicalStore.Models.Service.InvoiceModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .invoice-container {
            max-width: 800px;
            margin: 30px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .invoice-header {
            border-bottom: 2px solid #007bff;
            margin-bottom: 20px;
            padding-bottom: 10px;
        }

        .invoice-title {
            font-size: 1.5rem;
            color: #007bff;
            font-weight: bold;
        }

        .invoice-info {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .table-container {
            overflow-x: auto;
        }

        .table {
            margin-top: 20px;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .table thead th {
                background-color: #007bff;
                color: #fff;
                text-align: center;
                border: none;
            }

            .table tbody tr {
                background-color: #f9f9f9;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

                .table tbody tr:hover {
                    transform: scale(1.01);
                    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                }

            .table tbody td {
                border: none;
                text-align: center;
                vertical-align: middle;
            }

                .table tbody td:first-child {
                    border-left: 5px solid #007bff;
                    border-radius: 5px 0 0 5px;
                }

                .table tbody td:last-child {
                    border-radius: 0 5px 5px 0;
                }

        .total-row {
            font-weight: bold;
            background: #f1f3f5;
            border-radius: 8px;
        }

            .total-row td {
                text-align: center;
                font-size: 1.1rem;
            }

        .no-items-row {
            font-style: italic;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header text-center">
            <h1 class="invoice-title">Hóa đơn thanh toán</h1>
            <p class="invoice-info">Mã hóa đơn: @Model.OrderId | Ngày tạo: @Model.InvoiceDate.ToString("dd/MM/yyyy")</p>
        </div>

        <div class="customer-info mb-4">
            <h5>Thông tin khách hàng</h5>
            <p><strong>Name:</strong> @Model.CustomerName</p>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        int index = 1;
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@string.Format("{0:N0}VNĐ", item.UnitPrice)</td>
                                <td>@string.Format("{0:N0}VNĐ", (item.Quantity * item.UnitPrice))</td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr class="no-items-row">
                            <td colspan="5" class="text-center">No items available</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="4" class="text-end">Tổng tiền</td>
                        <td>@Model.TotalAmount.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</body>
</html>
