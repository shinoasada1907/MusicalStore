@{
    Layout = "_Layout";
    ViewData["Title"] = "Tin tức sự kiện";
}
@model MusicalStore.Models.BlogPost

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    <p class="text-muted">Đăng bởi @Model.Author | Ngày đăng @Model.PublishedDate.ToString("dd MMM yyyy")</p>
                    <div class="content">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-img-top {
        height: 100%;
        object-fit: cover;
    }

    .card-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .content {
        margin-top: 20px;
        font-size: 1rem;
        line-height: 1.8;
    }

    .text-muted {
        font-size: 0.9rem;
    }
</style>
